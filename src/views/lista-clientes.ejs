   <div class="main-content">
    <div class="page-content">
      <div class="container-fluid">
        

      <!-- start page title -->
      <div class="row">
          <div class="col-12">
              <div class="page-title-box d-sm-flex align-items-center
                  justify-content-between">
                  <h4 class="mb-sm-0 font-size-18">Lista de clientes</h4>

                  <div class="page-title-right">
                      <ol class="breadcrumb m-0">
                          <li class="breadcrumb-item"><a href="javascript:
                                  void(0);">Clientes</a></li>
                          <li class="breadcrumb-item active">Lista de clientes</li>
                      </ol>
                  </div>

              </div>
          </div>
      </div>
      <!-- end page title -->

      
        
        

          <div class="row align-items-center">
              <div class="col-md-6">
                  <!-- <div class="mb-3">
                      <h5 class="card-title">Contact List <span
                              class="text-muted fw-normal ms-2">(834)</span></h5>
                  </div> -->
              </div>

              <div class="col-md-6">
                  <div class="d-flex flex-wrap align-items-center
                      justify-content-end gap-2 mb-3">
                      <div>
                          <ul class="nav nav-pills">
                              <li class="nav-item">
                                  <a class="nav-link active"
                                      href="contacts-list"
                                      data-bs-toggle="tooltip"
                                      data-bs-placement="top" title="List"><i
                                          class="bx bx-list-ul"></i></a>
                              </li>
                              <!-- <li class="nav-item">
                                  <a class="nav-link"
                                      href="contacts-grid"
                                      data-bs-toggle="tooltip"
                                      data-bs-placement="top" title="Grid"><i
                                          class="bx bx-grid-alt"></i></a>
                              </li> -->
                          </ul>
                      </div>
                      <div>
                          <a href="/nuevo-cliente" class="btn btn-light"><i class="bx
                                  bx-plus me-1"></i> Agregar nuevo cliente</a>
                      </div>

                      <div class="dropdown">
                          <a class="btn btn-link text-muted py-1 font-size-16
                              shadow-none dropdown-toggle" href="#"
                              role="button" data-bs-toggle="dropdown"
                              aria-expanded="false">
                              <i class="bx bx-dots-horizontal-rounded"></i>
                          </a>

                          <ul class="dropdown-menu dropdown-menu-end">
                              <li><a class="dropdown-item" href="#">*Aqui ira una opción*</a></li>
                              <li><a class="dropdown-item" href="#">*Aqui ira una opción*</a></li>
                              <li><a class="dropdown-item" href="#">Eliminar cliente</a></li>
                          </ul>
                      </div>
                  </div>

              </div>
          </div>
            <!-- end row -->

            <div class="table-responsive mb-4">
                <table class="table align-middle datatable dt-responsive
                    table-check nowrap" style="border-collapse: collapse;
                    border-spacing: 0 8px; width: 100%;">
                    <thead>
                    
                       
                        <th scope="col">ID</th>
                        <th scope="col">Nombres</th>
                        <th scope="col">Apellidos</th>
                        <th scope="col">Correo electronico</th>
                        <th scope="col">Telefono</th>
                        <th scope="col">Direccion</th>
                        <th scope="col">Estado de cliente</th>
                        <th scope="col">Monto aprobado</th>
                                                 
                        </tr>
                    </thead>
                    <tbody>
                        <% clientes.forEach((user)=>{ %>
                           
                            <tr>
                          
                                <td> <a href="/perfil-clientes/<%- user.id_cliente %>"><%= user.id_cliente %></a></td>
                                <td><a href="/perfil-clientes/<%- user.id_cliente %>"><%= user.nombre %></a></td>
                                <td><a href="/perfil-clientes/<%- user.id_cliente %>"><%= user.apellido %></a></td>
                                <td><a href="/perfil-clientes/<%- user.id_cliente %>"><%= user.correo %></a></td>
                                <td><a href="/perfil-clientes/<%- user.id_cliente %>"><%= user.telefono %></a></td>
                                <td><a href="/perfil-clientes/<%- user.id_cliente %>"><%= user.direccion %></a></td>

                              <% if (user.estado_de_la_cuenta == 0 ) {%>
                                    <% user.estado_de_la_cuenta = "Activo" %>
                                     <td><a href="/perfil-clientes/<%- user.id_cliente %>"><div class="badge badge-soft-primary font-size-12" ><%= user.estado_de_la_cuenta %></div></a></td>
                            <% } else {%>
                                <%  if (user.estado_de_la_cuenta==1) { %>
                                   <% user.estado_de_la_cuenta = "Eliminado" %>
                                     <td><a href="/perfil-clientes/<%- user.id_cliente %>"><div class="badge badge-soft-danger font-size-12" ><%= user.estado_de_la_cuenta %></div></a></td>
                             <%}%>
                          <%}%>
                         
                        <!-- <td><div class="badge badge-soft-warning font-size-12" ><= user.estado_cliente %></div></td>  -->
           <td><a href="/perfil-clientes/<%- user.id_cliente %>"><div class="badge badge-soft-success font-size-12">$0<%= user.monto_aprobado %></div></a></td>
               
                            </tr>
                        <%})%>
                    </tbody>
                </table>
                <!-- end table -->
            </div>
            <!-- end table responsive -->
            
        </div>
      </div>
