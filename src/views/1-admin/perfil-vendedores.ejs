    }).then((result) => {
            if (result.isConfirmed) {
            const idGenerado = $("#idGeneradoFetch").val()
            const id_consecutivoVendedor = $("#id_consecutivoVendedorFetch").val()
            const estadoElegido = $("#selectEstado option:selected").val()

            fetch('/estadoDelVendedor', {
