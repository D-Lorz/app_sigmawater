            .catch(error => console.error('Error:', error))
            .then(response => {
                if (response) {
                    location.reload();
                } else {
                    Swal.fire(
                        'Error!',
                        'El vendedor no fue bloqueado exitosamente.',
                        'error'
                    ) }
            });
      }
    })
