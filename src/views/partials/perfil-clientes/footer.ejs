<script>

/* FUNCIÓN PARA LA TARJETA/SECCIÓN CREDITO APROBADO */

function ShowSelected()  {
    const cod = $("#reco option:selected").val()
    const cursorBtn = $("#cursorBtn")
    const btnCredito = $("#btnCreditoAprobado")
    let inputsMonto = document.getElementById('inputsMonto')
    let inputWS = document.createElement("input");
    let inputROS = document.createElement("input");

    // <input type="text" class="form-control required" required id="montoAprobadoWS" style="margin-left: 2%; display: none" placeholder="Máximo: $8,500">

    if (cod == "Whole System") {
        btnCredito.prop('disabled', false);
        cursorBtn.prop('style', 'cursor:auto')
        $('#inputROS').remove()
        inputWS.type= "text",
        inputWS.className= "form-control required",
        inputWS.style= "margin-left: 2%;",
        inputWS.placeholder= "Máximo: $8,500",
        inputWS.name= 'montoAprobadoPorFuera',
        inputWS.id = 'inputWS'
        inputsMonto.appendChild(inputWS);

        mascaraMonto(inputWS, 8500)

    } else if (cod == "Reverse Osmosis System"){
        btnCredito.prop('disabled', false);
        cursorBtn.prop('style', 'cursor:auto')
        $('#inputWS').remove()
        inputROS.type= "text",
        inputROS.className= "form-control required",
        inputROS.style= "margin-left: 2%;",
        inputROS.placeholder= "Máximo: $4,250",
        inputROS.name= 'montoAprobadoPorFuera'
        inputROS.id = 'inputROS'
        inputsMonto.appendChild(inputROS);

        mascaraMonto(inputROS, 4250)

    } else {
        inputWS.value = ''
        inputROS.value = ''
        inputWS.remove()
        inputROS.remove()
        btnCredito.prop('disabled', true);
        cursorBtn.prop('style', 'cursor:default')
        console.log("NINGÚN PRODUCTO SELECCIONADO")
    }
}
        // // Mascara para el input Monto Aprobado 
        function mascaraMonto (input, maximo) {
            IMask(input, {
                mask: '$num',
                blocks: {
                    num: {
                        mask: Number,
                        thousandsSeparator: ',',
                        min: 500,
                        max: maximo
                    }
                }
            });
        }
                                                                
</script>
