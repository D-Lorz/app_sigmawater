        <style>
            @import url("https://fonts.cdnfonts.com/css/oblivian-text");
            body {font-family: "Oblivian Text" !important;}
            /* ...........== LOGOS ==............. */
            /* Logo blanco */
            #logoBlanco{float: left;}

            /* ...........== CONTENEDORES ==............. */
            .contenedor-personalizado{width:100% ;}

            /* ...........== MENSAJES ==............. */
            /* Mensaje de bienvenida del login */
            .bienvenida{font-size: 13px;color:white;margin: 0;font-weight: 400;}
            /* Mensaje de titulo del login */
            .h2Id{ font-size: 32px;color:white;font-weight: 800;}
            /* Mensaje en blanco antes del mensaje amarillo */
            .link_registrarse{font-size: 13px;color:white;font-weight: 400;margin: 0;}
            /* Mensaje del click aqui */
            #clickAqui{color: #fed061;font-size: 13px;font-weight: 400;}

              /* ...........== LABEL ==............. */
            /* Label en general */
            label { position: absolute;font-size: 12px;color: white;margin: 3px; padding: 1px 9px 6px; }
            /* Label de correo */
            .labelEmail{ margin-left: 8px; font-size: 10px; padding: 5px 9px;}
            /* Label de clave */
            .labelPass{ margin-left: 8px; font-size: 10px; padding: 5px 9px; }

               /* ...........== CAMPOS ==............. */
            /* Input general */
            input {color: #000000;text-align: justify;padding: 14px 2px 1px 9px;}
            /* Campo de correo */
            .cssCorreo{ width: -webkit-fill-available; height: 47px; left: 76px; font-size: 13px;top: 357px; border: none;opacity: 0.29;border-radius: 5px;}
            /* Campo de la clave */
            .password{width: -webkit-fill-available; height: 47px;left: 76px;font-size: 13px; top: 357px; border: none; opacity: 0.29;border-radius: 5px; }

            /* ...........== PLACEHOLDER ==............. */
            ::placeholder {color: #5b1b74; background:white; padding: 12px 1px 8px 8px; margin: 15px;font-size: 12px; }
           
            /* ...........== RECORDARME ==............. */
            input[switch] + label { width: 101px;}
            input[switch]:checked + label:after {left: 80px;}
            
            /* ...........== OLVIDAR CLAVE ==............. */
            #olvidarPass{color: white; }

            /* ...........== BOTON ==............. */
            /* Boton de ingresar sesion */
            #boton{border-radius: 5px;color: #76368f;font-size: 13px; padding: 0.7em 3em;background: white;    margin-bottom: -12px;}
            .btn-check:focus + .btn-primary, .btn-primary:focus, .btn-primary:hover {color: #76368f;background-color: #ffffff;}

            /* ...........== COPYRIGHT ==............. */
            .copyRight { float: right; color: white; padding-right: 15px;margin-top: -60px;font-size: 13px;font-weight: 400;}

            /* ...........== REDES SOCIALES ==............. */
            .redesSociales{float: right;color: white;padding-right: 15px;margin-top: -83px;font-size: 13px;}
            #face{width: 16px;color: white;font-weight: 400;}

             /* ...........== RESPONSIVE ==............. */
             /* 350 px hasta 393 px ==>> moviles */
            @media (min-width: 350px) and (max-width: 393px) {

                #logoBlanco{float: none;margin-bottom: -53px;} 
                .bienvenida{text-align: center;font-size: 16px;}
                .h2Id{text-align: center;font-size: 27px;}
                .divBtn, .link_registrarse{text-align: center;}
                .copyRight{float: none;text-align: center;padding: 0;}  
                .redesSociales{float: none;text-align: center;padding: 0;}  
                .footer-personalizado{margin-top: 23px;}
            }
            @media (min-width: 400px) and (max-width:480px) {

                #logoBlanco{float: none;margin-bottom: -62px;} 
                .bienvenida{text-align: center;font-size: 16px;margin-top: -42%;}
                .h2Id{text-align: center;font-size: 27px;}
                .link_registrarse{text-align: center;font-size: 16px}
                .divBtn, .link_registrarse{text-align: center;}
                .copyRight{float: none;text-align: center;padding: 0;}  
                .redesSociales{float: none;text-align: center;padding: 0;}
