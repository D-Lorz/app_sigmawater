                .password{width: 27.2em;;height: 115px;font-size: 35px;border-radius: 13px;} 
                .labelEmail{ font-size: 24px;}
                .labelPass{ font-size: 24px; }
                ::placeholder {font-size: 30px;font-weight: 700; }
                .bienvenida, .link_registrarse, #clickAqui{ font-size: 36px; margin-top: 31px;}
                #olvidarPass{ font-size: 30px;}
                .h2Id{ font-size: 88px;}
                #boton {font-size: 38px;margin-top: 61px;padding: 0.7em 2.5em;border-radius: 17px; }
                .my-auto {margin-top: 11% !important;}
                #logoBlanco {width: 34%;margin-top: 27px;}
                #face{width: 48px;color: white;font-weight: 400;}
                .copyRight{font-size: 32px;}
                .redesSociales {font-size: 37px;margin-top: -118px;}
                input[switch]:checked + label:after {left: 163px;}
                input[switch] + label:after {
                    content: "";
                    position: absolute;
                    left: 4px;
                    background-color: #e9e9ef;
                    -webkit-box-shadow: none;
                    box-shadow: none;
                    border-radius: 2rem;
                    height: 49px;
                    width: 43px;
                    top: 2px;
                    -webkit-transition: all 0.1s ease-in-out;
                    transition: all 0.1s ease-in-out;
                }
                input[switch] + label:before {
                    color: #343a40;
                    content: attr(data-off-label);
                    display: block;
                    font-family: inherit;
                    font-size: 24px;
                    line-height: 21px;
                    position: absolute;
                    right: 1px;
                    margin: 9px;
                    top: 7px;
                    min-width: 1.66667rem;
                    overflow: hidden;
                }
                input[switch] + label {
                    width: 208px;
                    height: 53px;
                }
            }
        </style>
