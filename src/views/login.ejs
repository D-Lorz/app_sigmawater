            }
            @media (min-width: 1024px) and (max-width:1280px) {
                .footer-personalizado{margin-right: 30px;}
                /* Campo de correo */
                .cssCorreo{width: 35em; height: 57px; }
                /* Campo de la clave */
                .password{width: 35em; height: 57px; }
                /* Label de correo */
                .labelEmail{ font-size: 13px;}
                /* Label de clave */
                .labelPass{ font-size: 13px; }
                /* ...........== PLACEHOLDER ==............. */
