                .password{width: 41em; height: 69px;font-size: 13px; }
                .labelEmail{ font-size: 15px;}
                .labelPass{ font-size: 15px; }
                ::placeholder {font-size: 15px; }
                .bienvenida, .link_registrarse, #clickAqui{ font-size: 19px; margin-top: 31px;}
                #olvidarPass{ font-size: 16px;}
