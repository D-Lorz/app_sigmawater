                .my-auto {margin-top: 11% !important;}
                #logoBlanco {width: 42%;}
                .copyRight{font-size: 18px;}
                .redesSociales {font-size: 18px; margin-top: -91px;}
            }

            @media (min-width: 2560px) {
                .footer-personalizado{margin-right: 30px;}
                .contenedor-personalizado{width:auto ;}
                .content-inner-info{width: max-content}
