                .h2Id {font-size: 35px;}
                .link_registrarse, #clickAqui {font-size: 15px;}
                #boton {font-size: 17px; padding: 0.9em 2.5em; }
                #logoBlanco {width: 40%;}
            }
            @media (min-width: 1368px) and (max-width: 1920px) {
